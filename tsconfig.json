{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",              // ✅ JSX desteği eklendi
    "types": ["react", "react-native"], // ✅ React & React Native tipi desteği
    "paths": {
      "@images/*": ["./assets/images/*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./context/*"],
      "@constants/*": ["./constants/*"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./hooks/*"],
      "@screens/*": ["./app/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ]
}
